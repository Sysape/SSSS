[%# we need to use $$ not $ in vars so Template::Toolkit don't trash em %]
		<!-- load the jquery library from the js dir --!>
		<script type="text/javascript" src="/js/jquery.js"></script>
		<!-- an load the jquery-ui library too --!>
		<script type="text/javascript" src="/js/jquery-ui-1.8.4.custom.min.js">
		</script>
			<!-- when the document is ready hide the edit rows of the table
			and set up click events to toggle the normal and editable rows
			when the row is clicked --!>
		<script type="text/javascript">
			\$(document).ready(function(){
				\$(".edit").hide();
				\$("tr.norm").click(function(event){
					\$(this).next(".edit").toggle();
					\$(this).toggle();
			     });
				\$("tr.edit").click(function(event){
					\$(this).prev(".norm").toggle();
					\$(this).toggle();
			     });
			});
		</script>
		<!-- the UI script startup guff --!>
		<script type="text/javascript">
            \$(function(){
    
                // Tabs
				// we need to have a tabs section for every customer id.
				[% FOREACH key = customer.keys %]
                	\$('#[%customer.$key.id%]tabs').tabs();
				[%END%]

                // Datepicker
                \$('#datepicker').datepicker({
                    inline: true
                });
                
                //hover states on the static widgets
                \$('#dialog_link, ul#icons li').hover(
                    function() { $$(this).addClass('ui-state-hover'); }, 
                    function() { $$(this).removeClass('ui-state-hover'); }
                );
                
            });
        </script>

